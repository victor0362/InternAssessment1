<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
 	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
 	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
 	<script type="text/javascript">
 		function addJobFunction() {
 			
 		}
 	</script>
	<title>Inserting</title>
</head>
<body>
	<div class="jumbotron text-center">
		<h1>Job vacancies</h1>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-xs-6">
				<a href="../add" class="btn btn-primary btn-block" role="button">Create</a>
			</div>
			<div class="col-sm-6 col-xs-6">
				<a href="../read" class="btn btn-info btn-block" role="button">Read</a>
			</div>
		</div>
	</div>
	<!-- Form for add job title-->
	<div class="container" style="padding-top: 20px">
		<h2>Add Job Function Title</h2>
		<form action="../api/addJobTitle" method="post" accept-charset="utf-8">
			<div class="form-group">
				<label for="title">Job Title</label>
				<input type="text" class="form-control" id="title" name="title" required>
			</div>
			<button type="submit" class="btn btn-info">Submit</button>
		</form>
	</div>
	<!-- Form for add field nature -->
	<div class="container" style="padding-top: 20px">
		<h2>Add Job Function Nature</h2>
		<form action="../api/addJobNature" method="post" accept-charset="utf-8">
			<div class="form-group">
				<label for="nature">Job Function nature</label>
				<input type="text" class="form-control" id="nature" name="nature" required>
			</div>
			<button type="submit" class="btn btn-info">Submit</button>
		</form>
	</div>
	<!-- Form for add job specific function -->
	<div class="container" style="padding-top: 20px">
		<h2>Add Job Function Field</h2>
		<form action="../api/addJobFunction" method="post" accept-charset="utf-8">
			<div class="form-group">
				<label for="jobNat">Job Nature</label>
				<select class="form-control" name="jobNat" id="jobNat" required>
					<% for(var i=0;i< nature.length; ++i){ %>
					<option value="<%= nature[i].Nature %>"><%= nature[i].Nature %></option>
					<%}%>
				</select>
			</div>
			<div class="form-group">
				<label for="specFun">Job Function specific function</label>
				<input type="text" class="form-control" name="specFun" id="specFun" required>
			</div>
			<button type="submit" class="btn btn-info">Submit</button>
		</form>
	</div>
	<!-- Form for add Job -->
	<div class="container" style="padding-top: 20px; padding-bottom: 20px">
		<h2>Add Job form:</h2>
		<form action="../api/addJob" method="post" accept-charset="utf-8">
			<div class="form-group" method="post">
				<label for="JobID">Job Number:</label>
				<input type="text" class="form-control" name="JobID" id="JobID" required>
			</div>
			<div class="form-group">
				<label for="jobTitle">Job Title</label>
				<select class="form-control" id="jobTitle" name="jobTitle" required>
					<% for (var i=0; i< Jtitle.length; i++){ %>
						<option value="<%= Jtitle[i].JobTitleID%>"><%= Jtitle[i].JobTitle %></option>
					<% } %>
				</select>
			</div>
			<div class="form-group">
				<label for="Date">Date (YYYY-MM-DD):</label>
				<input type="date" class="form-control" name="date" id="date" required>
			</div>
			<div class="form-group">
				<label for="Employer">Company / Employer:</label>
				<input type="text" class="form-control" name="Employer" id="Employer" required>
			</div>
			<div class="form-group">
				<label for="Requirement">Requirement: (start with &#34;- &#34; in every single line)</label>
				<textarea name="Requirement" id="Requirement" class="form-control" style="height:100px;" placeholder="type the Requirement here" required></textarea>
			</div>
			<div class="form-group">
				<label for="ExpYrs">Year of Experience</label>
				<input type="number" class="form-control" name="ExpYrs" id="ExpYrs">
			</div>
			<div class="form-group">
				<label for="vac">Vacancies</label>
				<input type="number" class="form-control" name="vac" id="vac">
			</div>
			<div class="form-group">
				<label for="jobFun">Job Function</label>
				<select multiple class="form-control" id="jobFun" name="jobFun" required>
					<% for (var i=0; i< data.length; i++){ %>
						<option value="<%= data[i].JobFunctionID%>">
							<%= data[i].Nature %>>
							<%= data[i].JobFunctionName %>
						</option>
					<% } %>
				</select>
			</div>
			<button type="submit" class="btn btn-info">Submit</button>
		</form>
	</div>
</body>
</html>